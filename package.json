{
	"name": "sc2dataeditor",
	"description": "Edit xml Catalog files",
	"author": "M28",
	"license": "MIT",
	"version": "1.0.0",
	"categories": [],
	"engines": {
		"vscode": "^1.52.0"
	},
	"activationEvents": [
		"onLanguage:xml"
	],
	"main": "./out/extension/extension",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w"
	},
	"contributes": {
		"languages": [
			{
				"id": "sc2dataspace",
				"extensions": [],
				"aliases": ["SC2 Catalog", "Starcraft", "sc"],
				"filenamePatterns": [
					"**/GameData/**/*.xml"
				],
				"embeddedLanguages": {
					"text.xml": "xml"
				}
			}
		],
		"grammars": [
			{
				"language": "sc2dataspace",
				"scopeName": "text.xml.sc2dataspace",
				"path": "./src/extension/sc2dataspace.tmLanguage.json"
			}
		]
	},
	"devDependencies": {
		"@types/node": "^18.0.0",
		"@types/vscode": "^1.68.1",
		"typescript": "^4.7.4"
	},
	"dependencies": {
		"vscode-languageclient": "^8.0.1",
		"vscode-languageserver": "^8.0.1",
		"vscode-languageserver-textdocument": "^1.0.5"
	}
}
